package streamassignment ;

import java.util.ArrayList;
import java.util.stream.Collectors;

class ProductT {
	int orderid;
	String name;
	Double price;
	
 public	ProductTest(int orderid, String name, Double price){
		this.orderid=orderid;
		this.name=name;
		this.price=price;
	}

public Double getprice() {
	return price;
}

}

public class productC {
	
	public static void main(String[] args) {
		ArrayList<productT> al = new ArrayList<productT>();
		al.add(new productT(20,"mobile",20000.0));
		al.add(new productT(30,"mobile1",30000.0));
		al.add(new productT(40,"mobile2",40000.0));
		al.add(new productT(50,"mobile3",50000.0));
		al.add(new productT(60,"mobile4",70000.0));
		
		al.stream().forEach((a)->System.out.println(a.name+" "+a.orderid+" "+a.price)); 
		System.out.println(al.stream().map(productT::getprice).collect(Collectors.toList()));
	}

}
